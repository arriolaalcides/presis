{% extends '::base.html.twig' %}
{% block banner %}
{% endblock %}
{% block contenido %}
    <div class="container container-round">

        {{ form_start(delete_form, { 'style': 'horizontal' }) }}
        <fieldset>
            <legend>Eliminar cordon</legend>
            {{ form_control_static('Id',entity.id) }}
            {{ form_control_static('Descripcion',entity.descripcion) }}
            {{ form_control_static('Valor Declarado',entity.valorDeclarado) }}
            {{ form_control_static('Fabricante',entity.fabricante) }}


            <div class="form-group">
                <label class="col-md-4 control-label" for="button1id"></label>
                <div class="col-md-8">
                    {{ form_widget(delete_form.submit) }}
                    <a href="{{ path('modelo') }}" class="btn btn-primary">Volver a Modelos</a>

                </div>
            </div>

        </fieldset>

        {{ form_end(delete_form) }}


        {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}
    </div>
{% endblock %}
