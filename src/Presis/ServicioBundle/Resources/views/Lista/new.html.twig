{% extends '::base.html.twig' %}
{% block banner %}
{% endblock %}
{% block contenido %}
    <div class="container container-round">

        {{ form_start(form) }}
            <legend>Crear nueva lista de precio</legend>
            <div class="row">
                <div class="form-group">
                    {{ form_row(form.descripcion,{'style': 'horizontal', 'label_col': 2, 'widget_col': 4}) }}
                    {{ form_row(form.isGeneral,{'style': 'horizontal', 'label_col': 2, 'widget_col': 4}) }}
                    {{ form_errors(form.isGeneral) }}
                    <div id="form_gender">
                        {{ form_widget(form.isGeneral) }}
                    </div>
                </div>
            </div>
            <div class="row">        
                <div class="form-group">
                    {{ form_row(form.vendedor,{'style': 'horizontal', 'label_col': 2, 'widget_col': 4}) }}
                </div>
            </div>
            {{ form_errors(form, { 'global_errors': true }) }}
            <br />
            <div class="form-group">
                <label class="col-md-4 control-label" for="button1id"></label>
                <div class="col-md-8">
                    {{ form_widget(form.submit) }}
                    <a href="{{ path('lista') }}" class="btn btn-primary">Volver a Listas</a>

                </div>
            </div>

        {{ form_end(form) }}
        {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}
    </div>
{% endblock %}
