{% extends '::base.html.twig' %}
{% block banner %}
{% endblock %}
{% block contenido %}
    <div class="container container-round">

        {{ form_start(delete_form, { 'style': 'horizontal' }) }}
        <fieldset>
            <legend>Eliminar cordon</legend>
            {{ form_control_static('Id',entity.id) }}
            {{ form_control_static('Cord&oacute;n',entity.cordon.descripcion) }}
            {{ form_control_static('Cp',entity.cp) }}

            {{ form_control_static('Partido',entity.partido) }}
            {{ form_control_static('Barrio',entity.barrio) }}
            {{ form_control_static('Localidad',entity.localidad) }}
            {{ form_control_static('Provincia',entity.provincia) }}
            {{ form_control_static('Zona',entity.zona) }}
            {{ form_control_static('Sub-Zona',entity.subzona) }}
            {{ form_control_static('Prestador',entity.Prestador) }}


            <div class="form-group">
                <label class="col-md-4 control-label" for="button1id"></label>
                <div class="col-md-8">
                    {{ form_widget(delete_form.submit) }}
                    <a href="{{ path('cpcordon') }}" class="btn btn-primary">Volver a C&oacute;digos Postales</a>

                </div>
            </div>

        </fieldset>

        {{ form_end(delete_form) }}


        {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}
    </div>
{% endblock %}
