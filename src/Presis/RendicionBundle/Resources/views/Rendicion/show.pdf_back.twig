<pdf>
    <dynamic-page font-type="DejaVuSans">
        <h1 align="center">Planilla de rendicion</h1>
        <div id="div-general" width="100%" height="45%" border.color="black">
            <div id="encabezado">
                <div width="100%">
                    <strong># Planilla</strong>
                    {{ rendicion.id }}
                </div>
                <div width="100%">
                    <strong>Cliente</strong>
                    {{ rendicion.cliente }}
                </div>
                <div width="100%">
                    <strong>Fecha</strong>
                    {{ rendicion.fecha | date('d/m/y') }}
                </div>
                <div width="100%">
                    <strong>Detalles</strong>
                    {{ rendicion.detalles }}
                </div>
            </div>
            <div id="retiros">
                <table style="width:100%">
                    <tr>
                        <th>Tracking</th>
                        <th>Comprador</th>
                        <th>Direcci√≥n</th>
                        <th>Email</th>
                        <th>Localidad</th>
                        <th>Estado</th>
                        <th>Motivo</th>
                    </tr>
                    {% for retiro in retiros %}
                        <tr>
                            <td>{{ retiro.id }}</td>
                            <td>{{ retiro.nombreComprador }}</td>
                            <td>{{ retiro.direccionComprador }}</td>
                            <td>{{ retiro.emailComprador }}</td>
                            <td>{{ retiro.localidadComprador }}</td>
                            <td>{{ retiro.estado }}</td>
                            <td>{{ retiro.motivo }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </dynamic-page>
</pdf>
